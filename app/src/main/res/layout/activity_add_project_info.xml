                        android:textColor="@color/red"
                        android:textSize="@dimen/font_huge" />

                    <TextView
                        android:id="@+id/tv_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical|right"
                        android:paddingRight="@dimen/spacing_small"
                        android:text="城市"
                        android:textColor="@color/font_three"
                        android:textSize="@dimen/font_big" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_content2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="@dimen/spacing_small"
                    android:layout_weight="2"
                    android:background="@drawable/shape_add_weibao_record_et_bg"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/font_six"
                    android:textSize="@dimen/font_middle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="@dimen/spaceing_to_side">

                <TextView
                    android:id="@+id/tv_name0"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/spacing_small"
                    android:text="建筑物名称"
                    android:textColor="@color/font_three"
                    android:textSize="@dimen/font_big" />

                <EditText
                    android:id="@+id/tv_content0"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="@dimen/spacing_small"
                    android:layout_weight="2"
                    android:background="@drawable/shape_add_weibao_record_et_bg"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/font_six"
                    android:textSize="@dimen/font_middle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="@dimen/spaceing_to_side">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/spacing_small"
