                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/font_six"
                    android:textSize="@dimen/font_middle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="@dimen/spaceing_to_side">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/spacing_small"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="@dimen/font_huge" />

                    <TextView
                        android:id="@+id/tv_start_running"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical|right"
                        android:paddingRight="@dimen/spacing_small"
                        android:text="开始时间"
                        android:textColor="@color/font_three"
                        android:textSize="@dimen/font_big" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_start_running_choose"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="@dimen/spacing_small"
                    android:layout_weight="2"
                    android:background="@drawable/shape_add_weibao_record_et_bg"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="- -请选择运行时间- -"
                    android:textColor="@color/font_six"
                    android:textSize="@dimen/font_middle" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="@dimen/spaceing_to_side">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/spacing_small"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="@dimen/font_huge" />

                    <TextView
                        android:id="@+id/tv_end_running"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical|right"
                        android:paddingRight="@dimen/spacing_small"
                        android:text="结束时间"
                        android:textColor="@color/font_three"
                        android:textSize="@dimen/font_big" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_end_running_choose"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="@dimen/spacing_small"
                    android:layout_weight="2"
                    android:background="@drawable/shape_add_weibao_record_et_bg"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="- -请选择运行时间- -"
                    android:textColor="@color/font_six"
                    android:textSize="@dimen/font_middle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_freeze"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="@dimen/spaceing_to_side">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/spacing_small"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="@dimen/font_huge" />

                    <TextView
                        android:id="@+id/tv_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical|right"
                        android:paddingRight="@dimen/spacing_small"
                        android:text="面积(㎡)"
                        android:textColor="@color/font_three"
                        android:textSize="@dimen/font_big" />
                </LinearLayout>

                <EditText
                    android:id="@+id/tv_content3"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="@dimen/spacing_small"
                    android:layout_weight="2"
                    android:background="@drawable/shape_add_weibao_record_et_bg"
                    android:digits="0123456789+-."
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/font_six"
                    android:textSize="@dimen/font_middle" />
            </LinearLayout>

