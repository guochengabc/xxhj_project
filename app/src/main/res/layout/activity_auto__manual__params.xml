<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.kongtiaoapp.xxhj.activites.Auto_Manual_ParamsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        style="@style/title_style">
        <include layout="@layout/include_back"></include>
        <TextView
            android:id="@+id/tv_title"
            android:text="@string/title_param_enter"
            style="@style/title_center" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/shape_auto_title">

            <ListView
                android:id="@+id/lv_auto_manaul_param"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:descendantFocusability="beforeDescendants"
                android:divider="#00000000"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"></ListView>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_auto_title"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:gravity="center"
            android:padding="5dp"
            android:text="1#锅炉"
            android:textColor="@color/a000000" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/txt_last_step"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_next_step"
            android:gravity="center"
            android:text="@string/txt_last_step"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/txt_step"
            android:visibility="gone" />

        <Button
            android:id="@+id/txt_next_step"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_next_step"
            android:gravity="center"
            android:text="@string/txt_next_step"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/txt_step"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
