<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_title"
        style="@style/title_style">
        <include layout="@layout/include_back"></include>
        <TextView
            android:id="@+id/tv_title"
            android:text="@string/title_energy_show"
            style="@style/title_center" />
        <TextView
            android:id="@+id/tv_my_show"
            android:text="@string/title_my_show"
            android:visibility="gone"
            style="@style/title_right"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/iv_top_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/light" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/spaceing_to_side"
            android:layout_marginLeft="@dimen/spaceing_to_side"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_zhuBanFang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主办方:xxx"
                android:textColor="@color/white"
                android:textSize="@dimen/font_big" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:text="时间:2016年10月8日 15:13:29"
                android:textColor="@color/white"
                android:textSize="@dimen/font_big" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:text="地点:xxx-xxx-xxx"
                android:textColor="@color/white"
                android:textSize="@dimen/font_big" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_bottom_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/light" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginBottom="45dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="50dp">

                <TextView
                    android:id="@+id/tv_zhanhui_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:layout_marginLeft="@dimen/spaceing_to_side"
                    android:layout_marginRight="@dimen/spaceing_to_side"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:text="展会标题"
                    android:textColor="@color/white"
                    android:textSize="@dimen/spacing_huge" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="@dimen/spaceing_to_side"
                    android:layout_marginRight="@dimen/spaceing_to_side"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tv_zhanhui_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:layout_marginLeft="@dimen/spaceing_to_side"
                    android:layout_marginRight="@dimen/spaceing_to_side"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:text="节能展会节能展会节能展会节能展会节能展会节能展会节能展会节能展会"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_big" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="@dimen/spaceing_to_side"
                android:layout_marginRight="@dimen/spaceing_to_side"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_shoucang"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spaceing_to_side"
                    android:padding="10dp"
                    android:src="@drawable/selector_favorite" />

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white" />

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:src="@mipmap/share" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>