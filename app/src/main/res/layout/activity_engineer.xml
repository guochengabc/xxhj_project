<?xml version="1.0" encoding="utf-8"?>
<com.kongtiaoapp.xxhj.ui.view.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ngv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sv_work_Order"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kongtiaoapp.xxhj.ui.view.MyLinearlayout
        android:id="@+id/line_workorder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/include_view_line"></include>

        <com.kongtiaoapp.xxhj.ui.view.MyLinearlayout
            android:id="@+id/ml_repairForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/line_modifyForm"
                style="@style/workorder_detail_linearlayout">

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:text="工单编号:"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />

                <TextView
                    android:id="@+id/txt_workNumber"
                    style="@style/work_repair_edt_content"
                    android:hint="无" />

                <TextView
                    android:id="@+id/txt_modifyForm"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:gravity="center_vertical|right"
                    android:text="修改报修单 》"
                    android:textColor="@color/theme_color"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <include layout="@layout/include_view_line"></include>

            <LinearLayout style="@style/workorder_detail_linearlayout">

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:text="客户单位:"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />

                <TextView
                    android:id="@+id/edt_firm"
                    style="@style/work_repair_edt_content"
                    android:hint="无" />
            </LinearLayout>

            <include layout="@layout/include_view_line"></include>

            <LinearLayout style="@style/workorder_detail_linearlayout">

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:text="报修内容:"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />

                <TextView
                    android:id="@+id/task_describe"
                    style="@style/work_repair_edt_content"
                    android:hint="" />
            </LinearLayout>

            <include layout="@layout/include_view_line"></include>

            <LinearLayout style="@style/workorder_detail_linearlayout">

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:text="@string/repair_place"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />

                <TextView
                    android:id="@+id/floor_roomNumber"
                    style="@style/work_repair_edt_content"
                    android:hint="" />
            </LinearLayout>


            <include layout="@layout/include_view_line"></include>

            <LinearLayout style="@style/workorder_detail_linearlayout">

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:text="报修人:"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />

                <TextView
                    android:id="@+id/edt_repairPerson"
                    style="@style/work_repair_edt_content"
                    android:hint="" />
            </LinearLayout>


            <include layout="@layout/include_view_line"></include>

            <LinearLayout style="@style/workorder_detail_linearlayout">

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:text="联系电话:"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />

                <TextView
                    android:id="@+id/edt_contactPhone"
                    style="@style/work_repair_edt_content"
                    android:hint="" />
            </LinearLayout>

            <include layout="@layout/include_view_line"></include>

            <LinearLayout style="@style/workorder_detail_linearlayout">

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:text="工单模式:"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />

                <TextView
                    android:id="@+id/txt_worker_mode"
                    style="@style/work_repair_edt_content"
                    android:hint="" />
            </LinearLayout>

            <include layout="@layout/include_view_line"></include>

            <LinearLayout
                android:id="@+id/line_formPeople"
                style="@style/workorder_detail_linearlayout">

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:text="接单人:"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />

                <TextView
                    android:id="@+id/txt_formPerson"
                    style="@style/work_repair_edt_content"
                    android:hint="" />
            </LinearLayout>

            <include
                android:id="@+id/txt_visible"
                layout="@layout/include_view_line"
                android:visibility="gone"></include>

            <LinearLayout
                style="@style/workorder_detail_linearlayout"
                android:visibility="gone">

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:text="接单人:"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />

                <EditText
                    android:id="@+id/edt_reciever"
                    style="@style/work_repair_edt_content"
                    android:hint="请填写接单人" />
            </LinearLayout>

            <include
                layout="@layout/include_view_line"
                android:visibility="gone"></include>

            <LinearLayout
                style="@style/workorder_detail_linearlayout"
                android:visibility="gone">

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:text="质检员:"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />

                <TextView
                    android:id="@+id/txt_checkPerson"
                    style="@style/work_repair_edt_content"
                    android:hint="" />
            </LinearLayout>


            <include layout="@layout/include_view_line"></include>

            <LinearLayout style="@style/workorder_detail_linearlayout">

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:text="@string/repair_died_line_time"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />

                <TextView
                    android:id="@+id/txt_finish_timea"
                    style="@style/work_repair_edt_content"
                    android:hint="" />
            </LinearLayout>


            <include layout="@layout/include_view_line"></include>

            <LinearLayout style="@style/workorder_detail_linearlayout">

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:text="执行时间:"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />

                <TextView
                    android:id="@+id/txt_order_date"
                    style="@style/work_repair_edt_content"
                    android:hint="- -请选择- -" />
            </LinearLayout>

            <include layout="@layout/include_view_line"></include>

            <LinearLayout
                style="@style/workorder_detail_linearlayout"
                android:visibility="gone">

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:text="本人能否完成:"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />

                <TextView
                    android:id="@+id/txt_finish_byself"
                    style="@style/work_repair_edt_content"
                    android:hint="请选择" />
            </LinearLayout>
        </com.kongtiaoapp.xxhj.ui.view.MyLinearlayout>

        <include layout="@layout/include_view_line"></include>
<!--
        <com.kongtiaoapp.xxhj.ui.NineGridView.NineGridView
            android:id="@+id/iv_repair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content"
            android:layout_margin="12dp"
            android:paddingRight="2dp"
            android:visibility="gone"
            ngv:gap="2dp" />

        <LinearLayout style="@style/workorder_detail_linearlayout">

            <TextView
                android:layout_width="@dimen/work_width"
                android:layout_height="wrap_content"
                android:text="报修图片:"
                android:textColor="@color/a333333"
                android:textSize="@dimen/work_size" />

        </LinearLayout>
        <include layout="@layout/include_view_line"></include>-->
        <com.kongtiaoapp.xxhj.ui.view.MyLinearlayout
            android:id="@+id/line_pros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_land_waiter_evaluate"
                    android:padding="8dp"
                    android:text="@string/prospect_scene"
                    android:textSize="17sp" />

            </LinearLayout>

            <include layout="@layout/include_view_line"></include>


            <include layout="@layout/include_view_line"></include>

            <LinearLayout style="@style/workorder_detail_linearlayout">

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:text="专业:"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />

                <TextView
                    android:id="@+id/txt_professional"
                    style="@style/work_repair_edt_content"
                    android:hint="请选择专业" />
            </LinearLayout>

            <include layout="@layout/include_view_line"></include>

            <LinearLayout
                style="@style/workorder_detail_linearlayout">

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:text="勘查情况:"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />

                <EditText
                    android:id="@+id/edt_prospect"
                    style="@style/work_repair_edt_content"
                    android:hint="请简述勘查情况" />
            </LinearLayout>

            <include layout="@layout/include_view_line"></include>

            <LinearLayout
                style="@style/workorder_detail_linearlayout">

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:text="预计完成时间:"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />

                <TextView
                    android:id="@+id/txt_profession_date"
                    style="@style/work_repair_edt_content"
                    android:hint="- -请选择- -" />
            </LinearLayout>

            <include layout="@layout/include_view_line"></include>

            <com.kongtiaoapp.xxhj.ui.view.NoScrollGridView
                android:id="@+id/gridview"
                style="@style/record_form_grid"
                android:paddingLeft="15dp"></com.kongtiaoapp.xxhj.ui.view.NoScrollGridView>

            <com.kongtiaoapp.xxhj.ui.NineGridView.NineGridView
                android:id="@+id/iv_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_content"
                android:layout_margin="12dp"
                android:paddingRight="2dp"
                android:visibility="gone"
                ngv:gap="2dp" />

            <LinearLayout style="@style/workorder_detail_linearlayout">

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:text="图片上传:"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />

            </LinearLayout>

            <include layout="@layout/include_material_consumtion"></include>


            <TextView
                android:id="@+id/txt_add_enegry_metarial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/select_add_material"
                android:padding="10dp"
                android:text="添加物料"
                android:textColor="@color/a333333"
                android:textSize="@dimen/work_size" />


            <include layout="@layout/include_view_line"></include>

            <LinearLayout
                android:id="@+id/line_spros"
                style="@style/workorder_detail_linearlayout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_prospect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/selector_maincolor_style"
                    android:padding="10dp"
                    android:text="勘查上报"
                    android:textColor="@color/ffffff"
                    android:textSize="@dimen/work_shangbao_size" />
            </LinearLayout>
        </com.kongtiaoapp.xxhj.ui.view.MyLinearlayout>


        <include layout="@layout/include_view_line"></include>

        <com.kongtiaoapp.xxhj.ui.view.MyLinearlayout
            android:id="@+id/line_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_land_waiter_evaluate"
                android:padding="8dp"
                android:text="@string/engineer_finish"
                android:textSize="17sp" />

            <LinearLayout
                style="@style/workorder_detail_linearlayout">

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:text="是否完成:"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />

                <TextView
                    android:id="@+id/txt_isFinish"
                    style="@style/work_repair_edt_content"
                    android:hint="请选择" />
            </LinearLayout>

            <include layout="@layout/include_view_line"></include>

            <LinearLayout
                android:id="@+id/line_finish_Time"
                style="@style/workorder_detail_linearlayout">

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:text="完成时间:"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />

                <TextView
                    android:id="@+id/txt_finish_time"
                    style="@style/work_repair_edt_content"
                    android:hint="- -请选择- -" />
            </LinearLayout>

            <include layout="@layout/include_view_line"></include>

            <LinearLayout
                android:id="@+id/line_repairDepartment"
                style="@style/workorder_detail_linearlayout"
                android:visibility="gone">

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:text="维修部门:"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />

                <EditText
                    android:id="@+id/edt_erpairDepartment"
                    style="@style/work_repair_edt_content"
                    android:hint="请填写维修部门" />
            </LinearLayout>

            <include layout="@layout/include_view_line"></include>

            <LinearLayout style="@style/workorder_detail_linearlayout">

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:text="完成情况:"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />

                <EditText
                    android:id="@+id/edt_finish_situation"
                    style="@style/work_repair_edt_content"
                    android:hint="请填写完成情况" />
            </LinearLayout>

            <include layout="@layout/include_view_line"></include>

            <LinearLayout style="@style/workorder_detail_linearlayout_vertical">

                <com.kongtiaoapp.xxhj.ui.view.NoScrollGridView
                    android:id="@+id/gridview_finish"
                    style="@style/record_form_grid"></com.kongtiaoapp.xxhj.ui.view.NoScrollGridView>

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="图片上传:"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />
            </LinearLayout>

            <com.kongtiaoapp.xxhj.ui.NineGridView.NineGridView
                android:id="@+id/iv_picture_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_content"
                android:layout_margin="12dp"
                android:paddingRight="2dp"
                android:visibility="gone"
                ngv:gap="2dp" />

            <LinearLayout
                android:id="@+id/line_commit"
                style="@style/workorder_detail_linearlayout_vertical">

                <TextView
                    android:id="@+id/txt_sure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/selector_maincolor_style"
                    android:padding="10dp"
                    android:text="提交报单"
                    android:textColor="@color/ffffff"
                    android:textSize="@dimen/work_shangbao_size" />
            </LinearLayout>
        </com.kongtiaoapp.xxhj.ui.view.MyLinearlayout>


        <!--检察人员评价区-->

        <com.kongtiaoapp.xxhj.ui.view.MyLinearlayout
            android:id="@+id/line_evaluate"
            style="@style/workorder_detail_linearlayout_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_land_waiter_evaluate"
                    android:padding="8dp"
                    android:text="@string/land_waiter_evaluate"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout style="@style/workorder_detail_linearlayout">

                <TextView
                    android:layout_width="@dimen/work_width"
                    android:layout_height="wrap_content"
                    android:text="是否通过:"
                    android:textColor="@color/a333333"
                    android:textSize="@dimen/work_size" />

                <TextView
                    android:id="@+id/txt_isPass"
                    style="@style/work_repair_edt_content"
                    android:hint="请选择" />
            </LinearLayout>

            <include layout="@layout/include_view_line"></include>

            <EditText
                android:id="@+id/edt_evaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ffffff"
                android:hint="@string/work_evaluate"
                android:paddingBottom="70dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:textColor="@color/a999999" />
        </com.kongtiaoapp.xxhj.ui.view.MyLinearlayout>

        <com.kongtiaoapp.xxhj.ui.view.MyLinearlayout
            android:id="@+id/line_evaluate_commit"
            style="@style/workorder_detail_linearlayout_vertical">

            <TextView
                android:id="@+id/txt_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/selector_maincolor_style"
                android:padding="10dp"
                android:text="提交评价"
                android:textColor="@color/ffffff"
                android:textSize="@dimen/work_shangbao_size" />
        </com.kongtiaoapp.xxhj.ui.view.MyLinearlayout>
        <com.kongtiaoapp.xxhj.ui.view.MyLinearlayout
            android:id="@+id/line_acceptWork"
            android:visibility="gone"
            style="@style/workorder_detail_linearlayout_vertical">

            <TextView
                android:id="@+id/txt_acceptWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/selector_maincolor_style"
                android:padding="10dp"
                android:text="接单"
                android:textColor="@color/ffffff"
                android:textSize="@dimen/work_shangbao_size" />
        </com.kongtiaoapp.xxhj.ui.view.MyLinearlayout>
    </com.kongtiaoapp.xxhj.ui.view.MyLinearlayout>
</com.kongtiaoapp.xxhj.ui.view.MyScrollView>

