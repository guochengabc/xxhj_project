<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl_hk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/title_style"
            android:layout_width="match_parent">

            <include layout="@layout/include_back"></include>

            <TextView
                android:id="@+id/tv_title"
                style="@style/title_center"
                android:text="@string/title_environment" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_tem"
                        style="@style/top_list_item"
                        android:text="室外温度:" />

                    <TextView
                        android:id="@+id/tv_temContent"
                        style="@style/top_list_item"
                        android:paddingLeft="4dp"
                        android:text="23℃" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_hum"
                            style="@style/top_list_item"
                            android:text="室外湿度:" />

                        <TextView
                            android:id="@+id/tv_humContent"
                            style="@style/top_list_item"
                            android:paddingLeft="4dp"
                            android:text="23%" />
                    </LinearLayout>
                </LinearLayout>

                <com.kongtiaoapp.xxhj.ui.view.horizontallistview.ListOutView
                    android:id="@+id/lv_environment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"></com.kongtiaoapp.xxhj.ui.view.horizontallistview.ListOutView>

                <include layout="@layout/include_project_dtbackground"></include>

                <LinearLayout
                    android:id="@+id/line_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.kongtiaoapp.xxhj.utils.MyTablayout
                        android:id="@+id/tab_paint"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingRight="5dp"></com.kongtiaoapp.xxhj.utils.MyTablayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_left"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:src="@mipmap/leftarrow" />

                        <RadioGroup
                            android:id="@+id/group_time"
                            android:layout_width="160dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@mipmap/white_background_circle"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio0"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:button="@null"
                                android:gravity="center"
                                android:text="日"
                                android:textColor="@drawable/selector_duanzhen"
                                android:textSize="@dimen/comment_time_size" />

                            <RadioButton
                                android:id="@+id/radio1"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:button="@null"
                                android:gravity="center"
                                android:text="月"
                                android:textColor="@drawable/selector_duanzhen"
                                android:textSize="@dimen/comment_time_size" />
                        </RadioGroup>

                        <ImageView
                            android:id="@+id/img_right"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:src="@mipmap/rightarrow" />
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/frame_up"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/paint_height"
                        android:layout_marginTop="10dp"
                        android:padding="3dp">

                        <include layout="@layout/include_paintbackground"></include>

                        <include layout="@layout/include_graph_nodata"></include>//代表的是图例

                        <include layout="@layout/include_nodata_txt"></include>//代表的是图的提示，有数据还是没有数据

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"></View>

                    <include layout="@layout/include_view_line"></include>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <com.kongtiaoapp.xxhj.ui.view.MyExpandableListView
            android:id="@+id/melv_Job"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
