<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:fitsSystemWindows="true"
              android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        style="@style/title_style">
        <include layout="@layout/include_back"></include>
        <TextView
            android:text="@string/title_feedback"
            style="@style/title_center" />
        <TextView
            android:id="@+id/feedback_tv_send"
            android:text="@string/title_commit"
            style="@style/title_right"/>
    </RelativeLayout>


    <EditText
        android:id="@+id/feedback_et_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_feedback_et_bg"
        android:gravity="top"
        android:hint="常用联系方式(必填)"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="#666666"
        android:textColorHint="#999999"
        android:textSize="14sp"
        />

    <EditText
        android:id="@+id/feedback_et_info"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_feedback_et_bg"
        android:gravity="top"
        android:hint="您的意见是我们前进的最大动力"
        android:padding="8dp"
        android:textColor="#666666"
        android:textColorHint="#999999"
        android:textSize="14sp"/>
</LinearLayout>
