<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rela_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.kongtiaoapp.xxhj.activites.HVAC_MainActivity">
    <!-- 上边主页面 -->
    <FrameLayout
        android:id="@+id/F1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/r1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"></FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/r1"
        android:background="#999999" />

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="-20dp">

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:paddingTop="3dp">

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@drawable/selector_btn_energy_saving"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="运行"
                android:textColor="@drawable/selector_color"
                android:textSize="@dimen/font_big" />
            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/selector_btn_message"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="诊断"
                android:textColor="@drawable/selector_color"
                android:textSize="@dimen/font_big" />
            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/selector_btn_information"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="资讯"
                android:textColor="@drawable/selector_color"
                android:textSize="@dimen/font_big" />

        </RadioGroup>
    </RelativeLayout>
</RelativeLayout>
