                                android:text="区间2"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_biao2_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/color3"/>

                            <TextView
                                android:id="@+id/tv_biao2_qu_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_small"
                                android:text="区间3"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_biao2_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/color4"/>

                            <TextView
                                android:id="@+id/tv_biao2_qu_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_small"
                                android:text="区间4"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_biao2_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/color5"/>

                            <TextView
                                android:id="@+id/tv_biao2_qu_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_small"
                                android:text="区间5"/>
                        </LinearLayout>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_biao2_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_biao2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/spaceing_to_side"
                        android:layout_marginLeft="@dimen/spaceing_to_side"
                        android:layout_marginRight="@dimen/spaceing_to_side"
                        android:gravity="center"
                        android:textColor="@color/font_three"
                        android:textSize="@dimen/font_big"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/line_color"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spaceing_to_side"
                        android:text="系统设计耗电输冷比"
                        android:textColor="@color/font_three"
                        android:textSize="@dimen/font_middle"/>

                    <RelativeLayout
                        android:layout_width="match_parent"

                        android:layout_height="90dp">

                        <ImageView
                            android:layout_width="match_parent"

                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:background="@mipmap/hengtiao"/>

                        <RelativeLayout
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true">

                            <TextView
                                android:id="@+id/tv_heli"
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:layout_centerHorizontal="true"
                                android:drawableBottom="@mipmap/zhen_top"
                                android:paddingTop="4dp"
                                android:text="1.5"
                                android:textColor="@color/font_three"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:drawableTop="@mipmap/zhen_green"
                                android:text="合理值"
                                android:textColor="@color/font_three"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_shiji"
                            android:layout_width="80dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tv_shiji"
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:layout_centerHorizontal="true"
                                android:drawableBottom="@mipmap/zhen_top"
                                android:paddingTop="4dp"
                                android:text="0.0"
                                android:textColor="@color/font_three"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:drawableTop="@mipmap/zhen_yellow"
                                android:text="实际值"
                                android:textColor="@color/font_three"/>
                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_jindu_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spaceing_to_side"
                        android:gravity="center"
                        android:text="系统设计耗电输冷比"
                        android:textColor="@color/font_three"
                        android:textSize="@dimen/font_middle"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/line_color"/>
            </LinearLayout>

