                                android:layout_height="wrap_content"
                                android:src="@mipmap/color3"/>

                            <TextView
                                android:id="@+id/tv_qujian_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_small"
                                android:text="区间3"/>
                        </LinearLayout>

                        <LinearLayout
