                                android:layout_height="wrap_content"
                                android:src="@mipmap/color5"/>

                            <TextView
                                android:id="@+id/tv_qujian_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_small"
                                android:text="区间5"/>
                        </LinearLayout>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_cop_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/rl_biao1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/spaceing_to_side"
                        android:layout_marginRight="@dimen/spaceing_to_side"
                        android:gravity="center"
                        android:textColor="@color/font_three"
                        android:textSize="@dimen/font_big"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/line_color"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/spaceing_to_side">

                    <TextView
                        android:id="@+id/biao2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="系统单位制冷量"
                        android:textColor="@color/font_three"
                        android:textSize="@dimen/font_middle"/>


                    <RelativeLayout
                        android:id="@+id/rl_biao2"
                        android:layout_width="wrap_content"
