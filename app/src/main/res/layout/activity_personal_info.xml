<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        style="@style/title_style"
        android:layout_width="match_parent">

        <include layout="@layout/include_back"></include>

        <TextView
            style="@style/title_center"
            android:text="@string/title_person_info" />

        <TextView
            android:id="@+id/personalInfo_tv_save"
            style="@style/title_right"
            android:text="@string/title_save" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/personalInfo_lin_avatar"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:paddingLeft="12dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="头像"
                    android:textColor="@color/font_three"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/personalInfo_iv_avatarArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/arrows_rigth" />

                <ImageView
                    android:id="@+id/personalInfo_iv_avatar"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:layout_toLeftOf="@id/personalInfo_iv_avatarArrow"
                    android:scaleType="fitXY"
                    android:src="@mipmap/default_head" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f7f7f7"></View>

            <RelativeLayout
                android:id="@+id/personalInfo_rl_nickName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="12dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="昵称"
                    android:textColor="@color/font_three"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/personalInfo_tv_nickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="12dp"
                    android:drawableRight="@mipmap/arrows_rigth"
                    android:text="波波"
                    android:textColor="@color/font_three"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f7f7f7"></View>

            <RelativeLayout
                android:id="@+id/personalInfo_rl_gender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="12dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="性别"
                    android:textColor="@color/font_three"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/personalInfo_tv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="12dp"
                    android:drawableRight="@mipmap/arrows_rigth"
                    android:text="男"
                    android:textColor="@color/font_three"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f7f7f7"></View>

            <RelativeLayout
                android:id="@+id/personalInfo_rl_city"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="12dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="城市"
                    android:textColor="@color/font_three"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/personalInfo_tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="12dp"
                    android:drawableRight="@mipmap/arrows_rigth"
                    android:text="正在定位中…"
                    android:textColor="@color/font_three"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f7f7f7"></View>

            <RelativeLayout
                android:id="@+id/personalInfo_rl_company"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="12dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="工作单位"
                    android:textColor="@color/font_three"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/personalInfo_tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="12dp"
                    android:drawableRight="@mipmap/arrows_rigth"
                    android:text="清华大学"
                    android:textColor="@color/font_three"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f7f7f7"></View>

            <RelativeLayout
                android:id="@+id/personalInfo_rl_college"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="12dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="毕业院校"
                    android:textColor="@color/font_three"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/personalInfo_tv_college"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="12dp"
                    android:drawableRight="@mipmap/arrows_rigth"
                    android:text="北大"
                    android:textColor="@color/font_three"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f7f7f7"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="兴趣爱好"
                android:textColor="@color/font_three"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="15dp"
                android:background="@drawable/shape_feedback_et_bg">

                <TextView
                    android:id="@+id/personalInfo_tv_interestNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="7dp"
                    android:layout_marginRight="9dp"
                    android:text="0/100"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/personalInfo_et_interestInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="top"
                    android:padding="8dp"
                    android:textColor="#666666"
                    android:textSize="14sp" />


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
