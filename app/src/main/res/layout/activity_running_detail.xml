<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        style="@style/title_style">
        <include layout="@layout/include_back"></include>
        <TextView
            android:text="@string/title_record_info"
            style="@style/title_center" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_middle"
                    android:text="实时能耗与制冷量"
                    android:textColor="@color/font_three"
                    android:textSize="@dimen/font_big" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart2"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_below="@+id/tv_quxian2" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/back_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tv_pic1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/unit"
                    android:scaleType="fitXY"
                    android:layout_margin="@dimen/spacing_middle" />

                <TextView
                    android:id="@+id/tv_nenghao1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:gravity="center_vertical"
                    android:text="暂无数据"
                    android:textColor="@color/font_three"
                    android:textSize="@dimen/font_big" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/back_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tv_pic2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/first_cooling_pump"
                    android:scaleType="fitXY"
                    android:layout_margin="@dimen/spacing_middle" />

                <TextView
                    android:id="@+id/tv_nenghao2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:gravity="center_vertical"
                    android:text="暂无数据"
                    android:textColor="@color/font_three"
                    android:textSize="@dimen/font_big" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/back_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tv_pic3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/chilling_pump"
                    android:scaleType="fitXY"
                    android:layout_margin="@dimen/spacing_middle" />

                <TextView
                    android:id="@+id/tv_nenghao3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:gravity="center_vertical"
                    android:text="暂无数据"
                    android:textColor="@color/font_three"
                    android:textSize="@dimen/font_big" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/back_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tv_pic4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/chilling_tower"
                    android:scaleType="fitXY"
                    android:layout_margin="@dimen/spacing_middle" />

                <TextView
                    android:id="@+id/tv_nenghao4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:gravity="center_vertical"
                    android:text="暂无数据"
                    android:textColor="@color/font_three"
                    android:textSize="@dimen/font_big" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>