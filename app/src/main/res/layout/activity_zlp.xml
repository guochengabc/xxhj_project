<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/title_style"
        android:layout_width="match_parent">

        <include layout="@layout/include_back"></include>

        <TextView
            android:id="@+id/tv_title"
            style="@style/title_center"
            android:text="直流屏" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bpd_width"
        android:layout_marginTop="@dimen/bpd_top">

        <TextView
            android:id="@+id/txt_jxdy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="输入电压（Kw）:"
            android:textSize="@dimen/bpd_size" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_add_weibao_record_et_bg"
            android:gravity="center"
            android:textSize="@dimen/bpd_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bpd_width"
        android:layout_marginTop="@dimen/bpd_top">

        <TextView
            android:id="@+id/txt_ryjl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="充电电压:"
            android:textSize="@dimen/bpd_size" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_add_weibao_record_et_bg"
            android:gravity="center"
            android:textSize="@dimen/bpd_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bpd_width"
        android:layout_marginTop="@dimen/bpd_top">

        <TextView
            android:id="@+id/txt_scgl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="充电电流:"
            android:textSize="@dimen/bpd_size" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_add_weibao_record_et_bg"
            android:gravity="center"
            android:textSize="@dimen/bpd_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bpd_width"
        android:layout_marginTop="@dimen/bpd_top">

        <TextView
            android:id="@+id/txt_ryjal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="信号屏故障报警:"
            android:textSize="@dimen/bpd_size" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_add_weibao_record_et_bg"
            android:gravity="center"
            android:textSize="@dimen/bpd_size" />
    </LinearLayout>
</LinearLayout>
