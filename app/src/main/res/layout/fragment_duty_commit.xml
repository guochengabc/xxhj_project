<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kongtiaoapp.xxhj.ui.view.MyLinearlayout
        android:id="@+id/myline_touch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_middle"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dutyname_width"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/jiaoban_name_first"
                android:textColor="@color/font_three"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_jiaoban_name"
                style="@style/duty_record"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_et_bg"
                android:enabled="false"
                android:hint="输入姓名"
                android:paddingLeft="@dimen/spacing_middle" />

            <EditText
                android:id="@+id/et_jiaoban_phone"
                style="@style/duty_record"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1.5"
                android:background="@drawable/shape_et_bg"
                android:enabled="false"
                android:hint="手机号"
                android:paddingLeft="@dimen/spacing_middle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_middle"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_jiaoban_status"
                android:layout_width="@dimen/dutyname_width"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:gravity="right"
                android:text="@string/jiaoban_status"
                android:textColor="@color/font_three"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_jiaoban_status_content"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_et_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/spacing_middle"
                android:textColor="@color/font_six"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_middle"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dutyname_width"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:gravity="right"
                android:text="@string/jiaoban_name"
                android:textColor="@color/font_three"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_jiaoban_name_second"
                style="@style/duty_record"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_et_bg"
                android:hint="@string/please_jiaoban_name"
                android:paddingLeft="@dimen/spacing_middle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_middle"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dutyname_width"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:gravity="right"
                android:text="@string/jieban_name_first"
                android:textColor="@color/font_three"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_jieban_name"
                style="@style/duty_record"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_et_bg"
                android:hint="选择接班人"
                android:paddingLeft="@dimen/spacing_middle" />

            <EditText
                android:id="@+id/et_jieban_phone"
                style="@style/duty_record"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1.5"
                android:background="@drawable/shape_et_bg"
                android:enabled="false"
                android:hint="手机号"
                android:paddingLeft="@dimen/spacing_middle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_middle"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dutyname_width"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/jieban_name"
                android:textColor="@color/font_three"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_jieban_name_second"
                style="@style/duty_record"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_et_bg"
                android:hint="@string/please_jieban_name"
                android:paddingLeft="@dimen/spacing_middle" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_middle"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dutyname_width"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="值班时间:"
                android:textColor="@color/font_three"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_jieban_time"
                style="@style/duty_record"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_et_bg"
                android:focusable="false"
                android:hint="输入时间"
                android:paddingLeft="@dimen/spacing_middle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_middle"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dutyname_width"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="至:"
                android:textColor="@color/font_three"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_jiaoban_time"
                style="@style/duty_record"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_et_bg"
                android:enabled="true"
                android:focusable="false"
                android:hint="输入时间"
                android:paddingLeft="@dimen/spacing_middle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/spacing_small"
                android:src="@mipmap/line_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="工作内容"
                android:textColor="@color/font_three"
                android:textSize="@dimen/font_big" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_small"
                android:src="@mipmap/line_right" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_wrok_info"
            style="@style/duty_record"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_et_bg"
            android:gravity="top"
            android:hint="输入工作内容"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/spacing_small"
                android:src="@mipmap/line_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="重点工作及交接事项"
                android:textColor="@color/font_three"
                android:textSize="@dimen/font_big" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_small"
                android:src="@mipmap/line_right" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_jiaojie_info"
            style="@style/duty_record"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_et_bg"
            android:gravity="top"
            android:hint="输入重点工作及交接事项"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/spacing_small"
                android:src="@mipmap/line_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="领导交办"
                android:textColor="@color/font_three"
                android:textSize="@dimen/font_big" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_small"
                android:src="@mipmap/line_right" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_lingdao_info"
            style="@style/duty_record"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_et_bg"
            android:gravity="top"
            android:hint="输入交办内容"
            android:padding="8dp" />

        <LinearLayout
            android:id="@+id/line_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_clear"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/spaceing_to_side"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_main"
                android:gravity="center"
                android:text="清空"
                android:textColor="@color/white"
                android:textSize="@dimen/font_big" />

            <TextView
                android:id="@+id/txt_comment"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/spaceing_to_side"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_red"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/font_big" />
        </LinearLayout>
    </com.kongtiaoapp.xxhj.ui.view.MyLinearlayout>


</ScrollView>