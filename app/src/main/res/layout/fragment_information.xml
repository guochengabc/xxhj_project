<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        style="@style/title_style">

        <include layout="@layout/include_back"></include>

        <ImageView
            android:id="@+id/iv_publish"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/add"
            android:visibility="gone" />
    </RelativeLayout>

    <com.kongtiaoapp.xxhj.ui.view.PagerSlidingTab
        android:id="@+id/pstab"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_jienengba"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_marginTop="2dp"
                    android:background="@mipmap/zixun1" />

                <TextView
                    android:id="@+id/tv_jnb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="90dp"
                    android:text="节能吧"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_jnb"
                    android:layout_margin="@dimen/spacing_middle"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="提供关于节能的知识、科普、论坛"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_big" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_zhanhui"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_marginTop="2dp"
                    android:background="@mipmap/zixun2" />
                <TextView
                    android:id="@+id/tv_jnzh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="90dp"
                    android:text="节能展会"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_jnzh"
                    android:layout_margin="@dimen/spacing_middle"
                    android:text="提供关于节能的知识、科普、论坛"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_big" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_shangcheng"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_marginTop="2dp"
                    android:background="@mipmap/zixun3" />
                <TextView
                    android:id="@+id/tv_jnsc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="90dp"
                    android:text="节能商城"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_jnsc"
                    android:layout_margin="@dimen/spacing_middle"
                    android:text="提供关于节能的知识、科普、论坛"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_big" />
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:src="@mipmap/end" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>