<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/project_running_childmg"
    android:paddingRight="@dimen/project_running_childmg">

    <TextView
        android:id="@+id/txt_devicemodel"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/project_running_txt_height"
        android:gravity="center_vertical"
        android:textColor="@color/a666666"
        android:textSize="@dimen/project_runningsize" />

    <TextView
        android:id="@+id/txt_device_p"
        android:layout_width="match_parent"
        android:layout_height="@dimen/project_running_txt_height"
        android:gravity="right|center_vertical"
        android:textColor="@color/a666666"
        android:textSize="@dimen/project_runningsize" />
</LinearLayout>