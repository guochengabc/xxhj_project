<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginLeft="@dimen/item_device_state_title"
    android:layout_marginRight="@dimen/item_device_state_title"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_device_item1"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_height"
        android:layout_weight="1"
        android:background="@drawable/shape_device_contronl"
        android:gravity="center"
        android:textColor="@color/device_state_color" />

    <TextView
        android:id="@+id/txt_device_item2"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_height"
        android:layout_weight="1"
        android:background="@drawable/shape_device_contronl"
        android:gravity="center"
        android:textColor="@color/device_state_color" />

    <TextView
        android:id="@+id/txt_device_item3"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_height"
        android:layout_weight="1"
        android:background="@drawable/shape_device_contronl"
        android:gravity="center"
        android:textColor="@color/device_state_color" />

    <TextView
        android:id="@+id/txt_device_item4"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_height"
        android:layout_weight="1"
        android:background="@drawable/shape_device_contronl"
        android:gravity="center"
        android:textColor="@color/device_state_color" />
</LinearLayout>