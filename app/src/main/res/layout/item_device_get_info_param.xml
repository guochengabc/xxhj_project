<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:paddingRight="@dimen/spaceing_to_side">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_required"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/spacing_small"
            android:gravity="center_vertical|right"
            android:text="*"
            android:textColor="@color/red"
            android:textSize="@dimen/font_huge"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:focusable="true"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:textColor="@color/font_three"
            android:textSize="@dimen/font_middle"/>

    </LinearLayout>


    <EditText
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/spacing_small"
        android:layout_marginRight="@dimen/spaceing_to_side"
        android:layout_weight="2"
        android:background="@drawable/shape_add_weibao_record_et_bg"
        android:cursorVisible="true"
        android:enabled="true"
        android:gravity="center"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/font_six"
        android:textColorHint="@color/line_color"
        android:textSize="@dimen/font_middle"/>

</LinearLayout>