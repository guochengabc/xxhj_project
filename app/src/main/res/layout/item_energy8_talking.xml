<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_small"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_tu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:src="@mipmap/tu"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_ding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:src="@mipmap/ding"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_jing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:src="@mipmap/jing"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@id/iv_ding"
            android:text="[福利贴]"
            android:textColor="@color/font_three"
            android:textSize="@dimen/talk_detail_title"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/line"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/spacing_small"
        android:text="五小时前"
        android:textColor="@color/font_nine"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_margin="@dimen/spacing_small"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="这是一条加精的帖子,里面有大量福利图,而且还呗置顶了"
        android:textColor="@color/font_nine"
        android:textSize="16sp"/>

</RelativeLayout>