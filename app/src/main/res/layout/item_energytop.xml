<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.kongtiaoapp.xxhj.ui.view.horizontallistview.HorizontalListView
        android:id="@+id/hlv_energyTop"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"></com.kongtiaoapp.xxhj.ui.view.horizontallistview.HorizontalListView>

    <com.kongtiaoapp.xxhj.ui.view.NoScrollGridView
        android:id="@+id/lv_statisticTec"
        android:layout_width="match_parent"
        android:numColumns="3"
        android:layout_height="85dp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"></com.kongtiaoapp.xxhj.ui.view.NoScrollGridView>
</LinearLayout>