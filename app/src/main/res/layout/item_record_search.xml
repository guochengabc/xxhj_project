<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txt_record_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:textColor="@color/a666666"
        android:layout_marginTop="8dp"
        android:textSize="15sp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/txt_record_person"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/record_running_height"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:text="记录人："
        android:textColor="@color/a999999"
        android:textSize="@dimen/project_runningsize"/>

    <TextView
        android:id="@+id/txt_record_person_zhi"
        android:layout_width="80dp"
        android:layout_height="@dimen/record_running_height"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/txt_record_person"
        android:gravity="center_vertical"
        android:textColor="@color/a999999"
        android:textSize="@dimen/project_runningsize" />


    <TextView
        android:id="@+id/txt_record_time"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/record_running_height"
        android:layout_marginLeft="3dp"
        android:gravity="center_vertical"
        android:textColor="@color/a999999"
        android:textSize="@dimen/project_runningsize" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/record_running_height"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/arrows_rigth"
        android:visibility="visible" />
</LinearLayout>
</LinearLayout>