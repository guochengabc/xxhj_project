<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rela_record_running"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txt_record_person"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/record_running_height"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:text="记录人："
        android:textColor="@color/a999999"
        android:textSize="@dimen/project_runningsize"/>

    <TextView
        android:id="@+id/txt_record_person_zhi"
        android:layout_width="80dp"
        android:layout_height="@dimen/record_running_height"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/txt_record_person"
        android:gravity="center_vertical"
        android:textColor="@color/a666666"
        android:textSize="@dimen/project_runningsize" />

    <TextView
        android:id="@+id/txt_duty"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/record_running_height"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/txt_record_person_zhi"
        android:gravity="center_vertical"
        android:text="值班时间："
        android:textColor="@color/a999999"
        android:textSize="@dimen/project_runningsize" />

    <TextView
        android:id="@+id/txt_record_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/record_running_height"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/txt_duty"
        android:gravity="center_vertical"
        android:text="2017-12-02 5:00"
        android:textColor="@color/a999999"
        android:textSize="@dimen/project_runningsize" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/record_running_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/arrows_rigth"
        android:visibility="gone" />

</RelativeLayout>