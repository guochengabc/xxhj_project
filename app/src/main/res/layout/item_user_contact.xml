<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        style="@style/TopBg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/catalog"
            style="@style/TopTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="3dip"
            android:paddingLeft="10dip"
            android:paddingTop="3dip"
            android:text="A" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/user_manager"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_user_item_check"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/round_unchecked"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_user_item_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_user_item_check"
            android:src="@mipmap/default_user"/>
        <TextView
            android:id="@+id/tv_user_item_name"
            style="@style/TextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/iv_user_item_icon"
            android:text=""
            android:textSize="@dimen/usermanagersize" />

        <TextView
            android:id="@+id/tv_user_item_levelName"
            style="@style/TextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/tv_user_item_name"
            android:textColor="@color/user_manager_yuan"
            android:background="@color/a7BA2FF"
            android:visibility="gone"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_user_item_phone"
            style="@style/TextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/iv_user_item_icon"
            android:layout_below="@+id/tv_user_item_name"
            android:text=""
            android:textSize="@dimen/usermanagersize" />

    </RelativeLayout>

</LinearLayout>