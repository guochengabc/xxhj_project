<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/spaceing_to_side"
        android:text="建议优化一"
        android:textColor="@color/font_three"
        android:textSize="@dimen/font_big" />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:gravity="center_horizontal|top"
        android:padding="@dimen/spacing_middle"
        android:layout_marginBottom="@dimen/spaceing_to_side"
        android:layout_marginLeft="@dimen/spaceing_to_side"
        android:layout_marginRight="@dimen/spaceing_to_side"
        android:layout_marginTop="-5dp"
        android:background="@drawable/shape_et_bg"
        android:text="建议优化一"
        android:textColor="@color/font_three"
        android:textSize="@dimen/font_middle" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/back_color"/>
</LinearLayout>