<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/project_running_txt_width1"
            android:layout_height="@dimen/project_list_search_height"
            android:background="@drawable/group_search"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txt_search_city"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/project_list_search_height"
                android:gravity="center"
                android:maxLines="1"
                android:text="城市"
                android:textColor="@color/a999999"
                android:textSize="@dimen/project_list_search_sizet" />

            <ImageView
                android:id="@+id/img_city_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:src="@mipmap/groups_down" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/project_running_txt_width1"
            android:layout_height="@dimen/project_list_search_height"
            android:layout_marginLeft="16dp"
            android:background="@drawable/group_search"
            android:gravity="center_horizontal">


            <TextView
                android:id="@+id/txt_search_buidldtype"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/project_list_search_height"
                android:gravity="center"
                android:maxLines="1"
                android:text="建筑物类型"
                android:textColor="@color/a999999"
                android:textSize="@dimen/project_list_search_sizet" />

            <ImageView
                android:id="@+id/img_buildtype_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:src="@mipmap/groups_down" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_marginTop="@dimen/project_view_top"
        android:background="@color/view_color" />

    <TextView
        android:layout_width="@dimen/project_running_txt_width1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/project_view_top"
        android:gravity="center_vertical"
        android:text="单位能耗"
        android:textColor="@color/a333333"
        android:textSize="@dimen/project_list_search_sizet" />
    <!--单位能耗-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/project_view_bottom"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txt_search_uec_min"
            android:layout_width="@dimen/project_running_txt_width2"
            android:layout_height="40dp"
            android:background="@drawable/group_search_region"
            android:digits="0123456789+-."
            android:gravity="center"
            android:hint="最小值"
            android:maxLength="8"
            android:textColorHint="@color/grouplist_search_value"
            android:textSize="@dimen/project_list_search_sizet" />

        <View
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:background="@color/view_color" />

        <EditText
            android:id="@+id/txt_search_uec_max"
            android:layout_width="@dimen/project_running_txt_width2"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/group_search_region"
            android:digits="0123456789+-."
            android:gravity="center"
            android:hint="最大值"
            android:maxLength="8"
            android:textColorHint="@color/grouplist_search_value"
            android:textSize="@dimen/project_list_search_sizet" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_marginTop="@dimen/project_view_top"
        android:background="@color/view_color" />

    <TextView
        android:layout_width="@dimen/project_running_txt_width1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/project_view_top"
        android:gravity="center_vertical"
        android:text="系统COP"
        android:textColor="@color/a333333"
        android:textSize="@dimen/project_list_search_sizet" />
    <!--单位能耗-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/project_view_bottom"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txt_search_cop_min"
            android:layout_width="@dimen/project_running_txt_width2"
            android:layout_height="40dp"
            android:background="@drawable/group_search_region"
            android:digits="0123456789+-."
            android:gravity="center"
            android:hint="最小值"
            android:maxLength="8"
            android:textColorHint="@color/grouplist_search_value"
            android:textSize="@dimen/project_list_search_sizet" />

        <View
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:background="@color/view_color" />

        <EditText
            android:id="@+id/txt_search_cop_max"
            android:layout_width="@dimen/project_running_txt_width2"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/group_search_region"
            android:digits="0123456789+-."
            android:gravity="center"
            android:hint="最大值"
            android:maxLength="8"
            android:textColorHint="@color/grouplist_search_value"
            android:textSize="@dimen/project_list_search_sizet" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_marginTop="@dimen/project_view_top"
        android:background="@color/view_color" />

    <TextView
        android:layout_width="@dimen/project_running_txt_width1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/project_view_top"
        android:gravity="center_vertical"
        android:text="供回水温差"
        android:textColor="@color/a333333"
        android:textSize="@dimen/project_list_search_sizet" />
    <!--单位能耗-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/project_view_bottom"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txt_search_temp_min"
            android:layout_width="@dimen/project_running_txt_width2"
            android:layout_height="40dp"
            android:background="@drawable/group_search_region"
            android:digits="0123456789+-."
            android:gravity="center"
            android:hint="最小值"
            android:maxLength="8"
            android:textColorHint="@color/grouplist_search_value"
            android:textSize="@dimen/project_list_search_sizet" />

        <View
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:background="@color/view_color" />

        <EditText
            android:id="@+id/txt_search_temp_max"
            android:layout_width="@dimen/project_running_txt_width2"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/group_search_region"
            android:digits="0123456789+-."
            android:gravity="center"
            android:hint="最大值"
            android:maxLength="8"
            android:textColorHint="@color/grouplist_search_value"
            android:textSize="@dimen/project_list_search_sizet" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_search_reset"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_gray"
            android:gravity="center"
            android:text="重置"
            android:textSize="@dimen/project_list_search_sizet" />

        <TextView
            android:id="@+id/txt_search_sure"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/selector_red"
            android:gravity="center"
            android:text="确定"
            android:textSize="@dimen/project_list_search_sizet" />
    </LinearLayout>
</LinearLayout>