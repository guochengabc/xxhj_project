<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/a333333</item>
        <item name="colorPrimaryDark">@color/a333333</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StartTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="top_list_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/top_list_size</item>
    </style>
    <!-- 横着的线 -->
    <style name="wire_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#dddddd</item>
        <item name="android:layout_height">1px</item>
    </style>

    <!--全局title的Style-->
    <style name="title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/theme_color</item>
        <item name="android:layout_height">@dimen/main_title_height</item>
    </style>
    <!--titlebar的左侧-->
    <style name="title_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:src">@mipmap/back</item>
    </style>
    <!--titlebar的右侧的图片-->
    <style name="titlerightimg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <!--titlebar的右侧-->
    <style name="title_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@drawable/selector_titlebar_right_font_bg</item>
        <item name="android:textSize">@dimen/title_size_right</item>
    </style>

    <style name="title_left_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@drawable/selector_titlebar_right_font_bg</item>
        <item name="android:textSize">@dimen/title_size_right</item>
    </style>
    <!--titlebar的右侧-->
    <style name="title_center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/titlebarnameColor</item>
        <item name="android:layout_centerInParent">true</item>

    </style>
    <!--title的返回键-->
    <style name="title_btn_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:onClick">back</item>
        <item name="android:src">@mipmap/back</item>
        <item name="android:padding">12dp</item>
    </style>
    <!--title的标题-->
    <style name="title_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_font</item>
    </style>
    <!--title的菜单按钮-->
    <style name="title_menu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_font</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/main_margin</item>
    </style>

    <!--SuperCheckbox的样式-->
    <style name="SuperCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_item_checked</item>
    </style>

    <style name="popupwindow_anim_style">
        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/show_from_bottom</item>
        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/hide_to_bottom</item>
    </style>

    <!-- dialog样式，dialog周围背景变黑 -->
    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!-- 从底部弹出来的dialog动画样式 -->
    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>

    <style name="popup_animStyle">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="MyDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@drawable/dialog_window_bg</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- <item name="android:windowIsFloating">true</item> -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="MyLoadDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@drawable/dialog_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:gravity">bottom</item>
    </style>
    <!--首页图片宽高-->
    <style name="main_img_style">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
    </style>
    <!-- 时间选择器 -->
    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    <!--地点选择器-->
    <style name="Animation.Popup" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!--运行界面-->
    <declare-styleable name="RippleView">
        <attr name="pressed" format="reference" />
        <attr name="normal" format="reference" />
    </declare-styleable>
    <!--房子界面-->
    <declare-styleable name="HouseView">
        <attr name="textColors" format="color" />
        <attr name="textSizes" format="integer"></attr>
    </declare-styleable>
    <!--版本更新-->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <!--popwindow顶部弹出-->
    <style name="AnimationMode">
        <!-- PopupWindow左右弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/inuptodown</item>
        <item name="android:windowExitAnimation">@anim/outdowntoup</item>
    </style>
    <!--用户管理-->
    <style name="TopBg">
        <item name="android:background">#eeeeef</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">#333333</item>
    </style>

    <style name="TopTitle" parent="TextColor">
        <item name="android:textSize">14sp</item>
    </style>

    <!--工单报修-->
    <style name="work_repair_edt_content">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">#fff</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColorHint">@color/a999999</item>
        <item name="android:textColor">@color/a666666</item>
    </style>

    <style name="line_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:divider">@drawable/shape_line_border</item>
        <item name="android:showDividers">beginning|middle|end</item>

    </style>

    <style name="word_order_kancha">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/a333333</item>
        <item name="android:background">#fff</item>
        <item name="android:padding">8dp</item>
    </style>
    <!--工单管理模块里面的详情-->
    <style name="workorder_detail_linearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--工单管理模块里面的详情-->
    <style name="workorder_detail_linearlayout_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="work_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/a666666</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
    </style>
    <!--值班记录-->
    <style name="duty_record">
        <item name="android:textColorHint">@color/a999999</item>
        <item name="android:textColor">@color/a666666</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!--项目详情页的能耗界面的样式-->
    <style name="project_energy">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">@dimen/project_detail_size</item>
        <item name="android:textColor">@color/a999999</item>
    </style>

    <!--报警管理列表-->
    <style name="alram_list">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
    </style>
    <!--报警详情页-->
    <style name="alarm_detail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="over_all_evaluate_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_border</item>
        <item name="android:layout_marginRight">@dimen/margin_border</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/shape_border_line</item>
        <item name="android:padding">4dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!--工单管理GridView设置-->
    <style name="record_form_grid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:gravity">left</item>
        <item name="android:horizontalSpacing">2dp</item>
        <item name="android:numColumns">2</item>
        <item name="android:verticalSpacing">2dp</item>
    </style>

    <style name="workorder_satisfic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/a666666</item>
    </style>
    <!--工程师统计-->
    <style name="engineer_click">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">22dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@color/workstasficdate</item>
    </style>

    <!--个人中心修改环境-->
    <style name="modify_environment">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/a666666</item>
    </style>
    <!--参数设置-->
    <style name="param_setting">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/a666666</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">#fff</item>
    </style>
    <!--参数设置可修改-->
    <style name="param_modify">
        <item name="android:layout_width">0.1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/shape_paramsetting</item>
    </style>
    <!--室内环境检测-->
    <style name="environment_states">
        <item name="android:layout_width">@dimen/environment_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#850</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--能源计量 -->
    <!--能源录入的key-->
    <style name="energy_record_name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/a666666</item>
    </style>
    <!--能源录入的value-->
    <style name="energy_record_Value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.1</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/a666666</item>
        <item name="android:background">@drawable/shape_add_weibao_record_et_bg</item>
    </style>
    <!--能源计量头部选择框设置   全部  已录入 未录入-->
    <style name="energy_record_status">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">0.7dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@drawable/selector_color</item>
        <item name="android:background">@drawable/select_transport_top</item>
    </style>

    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--变配电的统计尖峰平谷电量-->
    <style name="statistic_etc">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <!--环控监测  顶部列表 电量、燃气余量、温度、湿度布局文件-->
    <style name="environment_statistic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
